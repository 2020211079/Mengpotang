.bg-top {
  position: fixed;
  width: 100%;
  height: 15%;
  top: 0;
  background: linear-gradient(#00000088 0%, transparent 100%);
}

.bg-bot {
  position: fixed;
  width: 100%;
  height: 15%;
  bottom: 0;
  background: linear-gradient(transparent 0%, #00000088 100%);
}

.container {
  position: absolute;
  margin: 100rpx auto;
}

.info-item {
  width: 600rpx;
  height: 200rpx;
  background-color: antiquewhite;
}

.back {
  position: absolute;
  width: 100px;
  height: 34px;
  left: 280rpx;
  bottom: 40rpx;
  transition: opacity 0;
  transition-delay: 0.5s;
}

.text-container {
  position: fixed;
  left: 50rpx;
  transition: bottom 1s;
}

.result {
  width: 647rpx;
  height: 635rpx;
}

.confirm {
  position: absolute;
  width: 100px;
  height: 34px;
  left: 20rpx;
  bottom: -100rpx;
}

.cancel {
  position: absolute;
  width: 100px;
  height: 34px;
  right: 20rpx;
  bottom: -100rpx;
}

.confirm-title {
  position: absolute;
  left: 60rpx;
  top: 200rpx;
}

.confirm-text {
  position: absolute;
  left: 60rpx;
  top: 280rpx;
  width: 380rpx;
  height: 300rpx;
}

.bg-river {
  opacity: 0;
  animation: glitter1 8s infinite;
}

.bg-river-hover {
  clip-path: polygon(0% 34%, 100% 52%, 100% 77%, 64% 100%, 0 100%, 0% 84%, 50% 62%, 0% 56%);
}

.bg-land {
  opacity: 0;
  animation: glitter2 8s infinite;
}

.bg-land-hover {
  clip-path: polygon(0% 0%, 100% 0%, 100% 52%, 0% 34%);
}

@keyframes glitter1 {
  0% {
    opacity: 0
  }

  15% {
    opacity: 0.2
  }

  25% {
    opacity: 0.2
  }

  40% {
    opacity: 0
  }
}

@keyframes glitter2 {
  50% {
    opacity: 0
  }

  65% {
    opacity: 0.2
  }

  75% {
    opacity: 0.2
  }

  90% {
    opacity: 0
  }
}

.bg-river-tag {
  color: #fff;
  position: fixed;
  left: 400rpx;
  top: 60vh;
  pointer-events: none;
}

.bg-land-tag {
  position: fixed;
  left: 200rpx;
  top: 15vh;
  pointer-events: none;
}

.letter-group {
  position: fixed;
  left: 0;
  width: 100%;
  height: 85vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: top 0.5s;
}

.letter-container {
  width: 100%;
  height: 70vh;
}

.letter-container swiper-item{
  width: 100%;
  height: 100%;
  display: flex;
}

.letter {
  width: 600rpx;
  margin: auto;
}

.button-group {
  width: 90%;
  margin-top: 20px;
  display: flex;
  justify-content: space-between;
}

.button-group image {
  height: 6vh;
}

.letter-title {
  position: absolute;
  left: 120rpx;
  top: 200rpx;
}

.letter-text {
  position: absolute;
  left: 120rpx;
  top: 250rpx;
}