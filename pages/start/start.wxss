.start-button {
  position: fixed;
  height: 100rpx;
  top: 85vh;
  transition: opacity 0;
  transition-delay: 0.5s;
}

.start-table {
  position: fixed;
  bottom: 0;
  left: -10rpx;
  width: 760rpx;
  height: 26vh;
}

.say-container {
  position: fixed;
  top: 4vh;
  height: 20vh;
  width: 100%;
  transform-origin: 50% 100%;
  animation: move 5s infinite;
}

@keyframes move {
  0% {
    transform: scale(0);
  }
  40% {
    transform: scale(1);
  }
  70% {
    opacity: 1;
  }
  80% {
    opacity: 0;
  }
  100% {
    opacity: 0;
  }
}

