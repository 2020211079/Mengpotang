/* 遮罩层 */
.mask {
  animation: move-left 0.5s 1.5s;
  animation-fill-mode: forwards;
  /* transition: left 0.5s; */
  background-color: #fff;
  z-index: 999;
}

.mask-text {
  position: fixed;
  height: 40vh;
  top: 7vh;
}

.mask-progress {
  position: fixed;
  width: 360rpx;
  height: 50rpx;
  border: 2px solid wheat;
  top: 70vh;
  padding: 1px;
}

.mask-progress-container {
  animation: loading 1.5s;

  height: 100%;
  background-color: wheat;
}

@keyframes loading {
  0% {
    width: 0;
  }
  100% {
    width: 100%;
  }
}

@keyframes move-left {
  0% {
    left: 0;
  }
  100% {
    left: -100%;
  }
}